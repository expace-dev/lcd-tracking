{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<section class="section">
		<div class="container">
			<header class="section-header">
				<h2>Connexion</h2>
				<p class="subtle">Accédez à votre espace LCD Tracking.</p>
			</header>
		</div>
	</section>

	<div class="auth-main">
		<div class="auth-card card">
			<form method="post">
				{% if error %}
					<p class="form-error" role="status">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</p>
				{% endif %}


				<div class="form-row">
					<label for="username">Email</label>
					<input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
				</div>

				<div class="form-row">
					<label for="password">Mot de passe</label>
					<input type="password" name="_password" id="password" autocomplete="current-password" required>
				</div>


				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-primary" type="submit">Se connecter</button>

				<div class="auth-help">
					<a href="">Mot de passe oublié ?</a>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
